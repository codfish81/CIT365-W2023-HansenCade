@page
@model MyScriptureJournal.Pages.Scrpitures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Book Search: <select asp-for="ScriptureBook" asp-items="Model.Book">
            <option value="">All</option>
        </select>
        Entry Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort" class="sortLink">
                    @Html.DisplayNameFor(model => model.Scripture[0].Book)
                </a>
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Verse)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort" class="sortLink">
                    @Html.DisplayNameFor(model => model.Scripture[0].EntryDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Entry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entry)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
