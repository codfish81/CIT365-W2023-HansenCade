@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Movie App</h1>
    <h4 class="display-7">for Church Movies</h4>
    <p>To learn more about The Chruch of Jesus Christ of Latter Day Saints, <a href="https://www.churchofjesuschrist.org/comeuntochrist">Click here</a>.</p>
</div>

<div id="carouselHomePage" class="carousel slide" data-bs-ride="carousel" style="position:relative;z-index:auto;">

    <ol class="carousel-indicators" style="z-index:1 !important">
        <li data-bs-target="#carouselHomePage" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselHomePage" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselHomePage" data-bs-slide-to="2"></li>
        <li data-bs-target="#carouselHomePage" data-bs-slide-to="3"></li>
        <li data-bs-target="#carouselHomePage" data-bs-slide-to="4"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/Images/17_Miracles.jpg" alt = "17 Miracles" style = "width:100%">
        </div>
        <div class="carousel-item">
            <img src="~/Images/The_Best_Two_Years.jpg" alt="The Best Two Years" style="width:100%">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Forever_Strong.jpg" alt="Forever Strong" style="width:100%">
        </div>
        <div class="carousel-item">
            <img src="~/Images/The_Cokeville_Miracle.jpg" alt="The Cokeville Miracle" style="width:100%">
        </div>
        <div class="carousel-item">
            <img src="~/Images/The_R.M..jpg" alt="The R.M." style="width:100%">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#carouselHomePage" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only"></span>
    </a>
    <a class="right carousel-control" href="#carouselHomePage" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only"></span>
    </a>
</div>